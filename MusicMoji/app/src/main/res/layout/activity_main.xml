<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".MainActivity">

    <com.sdsmdg.harjot.longshadows.LongShadowsWrapper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <com.sdsmdg.harjot.longshadows.LongShadowsImageView
            android:id="@+id/icon"
            android:layout_width="318dp"
            android:layout_height="199dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="50dp"
            android:contentDescription="logo"
            android:src="@drawable/ic_logo" />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/textView"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="139dp"
            android:background="@drawable/custom_button"
            android:drawableLeft="@drawable/ic_spotify_logo"
            android:drawablePadding="13dip"
            android:hapticFeedbackEnabled="true"
            android:padding="12dp"
            android:text="@string/connect_now"
            android:textColor="@color/login_form_details"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:fontFamily="@font/source_code_pro_semibold"
            android:text="Songmoji"
            android:textAllCaps="false"
            android:textSize="36sp" />

    </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>


</RelativeLayout>